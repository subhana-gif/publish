  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types"]
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts"
  ]
}
